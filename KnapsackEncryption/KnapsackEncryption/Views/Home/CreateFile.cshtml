        padding: 0px;
    }
    form{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 90vh;
        
    }

    textarea {
        width: 90%;
        height: 70%;
        padding: 10px;
        font-size: 22px;
        border: 2px solid #ccc;
        border-radius: 5px;
        resize: none; /* Запобігаємо зміні розмірів поля */
    }

