<style>

    .navigation-link, .upload-button {
        background-color: #28292c;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s ease-in-out;
        text-decoration: none;
        margin-top: 20px;
    }

        .navigation-link:hover, .upload-button:hover {
            background-color: #141518;
        }
    
